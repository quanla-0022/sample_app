<%= form_for(@micropost) do |f| %>

  <div class="field">
    <%= f.text_area :content, placeholder: t("compose_new_micropost") %>
  </div>
  <%= f.submit t("submit"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>
